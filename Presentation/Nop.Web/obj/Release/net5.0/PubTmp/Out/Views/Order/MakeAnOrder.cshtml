<script asp-location="Footer">

    var currentLine = 2;

    $('body').on('focus', '.product_name', function (e)
    {
        $(this).autocomplete({
        source: '/Catalog/SearchTermAutoCompleteForMakeAnOrder',
        minLength:3,
        select: function (event, ui)
        {
            $(this).parents(".mnoContainer").find(".atter_append").html('');
            debugger;
            console.log(ui);
            var dropdown = [];
            var productPrice = ui.item.price.PriceValue;
            if (ui.item.ProductAttributes.length > 0)
            {
                $(this).parents(".mnoContainer").find(".product_attr").html("");
                for (let attr of ui.item.ProductAttributes)
                {
                    var name = attr.Name;
                    if (attr.Values.length > 0)
                    {
                        debugger;
                        var atterHtml = '<select name="attr1" class="product_attr"><option value="0"> Select ' + name + '</option>';
                        for (let val of attr.Values)
                        {
                            var price = val.PriceAdjustmentValue;
                            atterHtml += '<option value="' + price + '">' + val.Name + ' </option>';
                        }
                        atterHtml += '</select>';
                        $(this).parents(".mnoContainer").find(".atter_append").append(atterHtml);
                    }
                }
            }
            console.log(dropdown);
            var id = $(this).attr("name").replace("name", '');
            $('input.productid[name="id' + id + '"]').val(ui.item.id);
            $(this).parents(".mnoContainer").find(".product_price").html(ui.item.price.Price);
            $(this).parents(".mnoContainer").find(".price").val(ui.item.price.Price);
            $(this).parents(".mnoContainer").find(".productPrice").val(ui.item.price.Price);


            $(this).val(ui.item.label);
            $(this).parents(".mnoContainer").find(".pproduct_img_dv").css("display", "none");
            $(this).parents(".mnoContainer").find(".product_des_dv").css("display", "none");
            $(this).parents(".mnoContainer").find(".Product_price_div.container_info").css("display", "block");
            $(this).parents(".mnoContainer").find(".product_attr_dv.container_info").css("display", "block");
            return false;
        },
    });
    });


    $(".addmoreLine span").click(function ()
    {
        currentLine++;
        $("#lineItem").val(currentLine)
        var html = '<div class="mnoContainer"> <div class="cross"><i class="far fa-times-circle"></i></div> <input type="hidden" value="0" class="productid" name="id' + currentLine + '" /> <input type="hidden" value="0" class="productPrice" /> <input type="hidden" value="0" class="price" name="price' + currentLine + '" /> <input type="hidden" value="" class="attrName" name="attrName' + currentLine + '" /> <div class="product_name_dv container_info"><span class="title">@T("Sale.Product.Name") </span>  <input type="text" placeholder="@T("Sale.Product.Name")" class="product_name" name="name' + currentLine + '" /></div> <div class="pproduct_quantity_dv container_info"><span class="title">@T("Sale.Product.QTY")</span> <input type="number" placeholder="@T("Sale.Product.QTY")" name="quantity' + currentLine + '" min="1" value="1" class="product_qty" /></div> <div class="product_attr_dv container_info"><span class="title">@T("Sale.Product.Attr")</span> <div class="atter_append">     </div> </div> <div class="product_des_dv container_info"><span class="title">@T("Sale.Product.Description")</span><textarea class="productDec" placeholder="@T("Sale.Product.Description")" name="description' + currentLine + '"></textarea></div> <div class="Product_price_div container_info"><span class="title dontBlock">@T("Sale.Product.Price") </span> <span class="product_price">@T("Amount.Zero")</span></div> <div class="pproduct_img_dv container_info"><span class="title dontBlock">@T("Sale.Product.Image")</span> <input name="image' + currentLine + '" type="file" accept="image/png, image/jpeg" class="product_img" /></div> </div>';
        $("div#make_an_order").append(html);

    });


    $(document).on("change", "select.product_attr", function ()
    {
        debugger;
        var self = this;
        var attrName = "";
        if ($(this).hasClass('error_dv'))
        {
            $(this).removeClass('error_dv');
        }
        var price = parseInt($(this).parents(".mnoContainer").find(".productPrice").val());
        var attrList= $(this).parents(".mnoContainer").find(".atter_append select");
        attrList.each(function (index)
        {
            debugger;
            var selectedPrice = parseInt($(this).find('option:selected').val());
            if (selectedPrice != NaN && selectedPrice != 0)
            {
                price += selectedPrice;
                attrName += $(this).find('option:selected').text() + "</br>";
            }
        });
        debugger;
        $(self).parents(".mnoContainer").find(".product_price").html(price);
        $(self).parents(".mnoContainer").find(".price").val(price);
        $(self).parents(".mnoContainer").find(".attrName").val(attrName);
    });



    $("button#upload_order").click(function (e) {
        debugger;
        e.preventDefault();
        var attrList = $("select.product_attr");
        var foundBlank = false;
        attrList.each(function (index)
        {
            debugger;
            var selected_index = $(this).prop('selectedIndex');
            if (selected_index == 0) {
                $(this).addClass("error_dv");
                $([document.documentElement, document.body]).animate({
                    scrollTop: $(this).offset().top
                });
                foundBlank = true;
                return false;
            }
        });
        debugger;
        if (foundBlank == false)
        {
            $("#category-form").submit();
        }

    });



    $(document).on("click", ".cross", function () {
        $(this).parents(".mnoContainer").find(".atter_append").html("");
        $(this).parents(".mnoContainer").find("input").val("");
        $(this).parents(".mnoContainer").find(".product_attr_dv.container_info").css("display", "none");
        $(this).parents(".mnoContainer").find(".Product_price_div.container_info").css("display", "none");

        $(this).parents(".mnoContainer").find(".product_price").html("");

        $(this).parents(".mnoContainer").find(".pproduct_img_dv").css("display", "block");
        $(this).parents(".mnoContainer").find(".product_des_dv").css("display", "block");
    });

    $("input#SameShippingAddress").change(function () {
