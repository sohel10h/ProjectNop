            $("input#ShippingNewAddress_City").val($("input#BillingNewAddress_City").val());
            $("input#ShippingNewAddress_Address1").val($("input#BillingNewAddress_Address1").val());
            $("input#ShippingNewAddress_PhoneNumber").val($("input#BillingNewAddress_PhoneNumber").val());
            $("select#ShippingNewAddress_CountryId").val($("select#BillingNewAddress_CountryId").val());
            $("div#payment-new-make_order").hide();

