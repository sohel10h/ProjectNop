        <script asp-location="Footer">
            $(document).ready(function ()
            {
                var windowsHeight = $(window).height()-150;
                $("#main-container").height(windowsHeight);



                $(window).scroll(function (event) {
                    var scroll = $(window).scrollTop();
                    if (scroll > 190) {
                        $(".footer").show();
                    }
                    else
                    {
                        $(".footer").hide();
                    }
                });

                var count = 0;
                setInterval(function ()
                {
                    if (count == 0)
                    {
                        $(".icons_chat").css("display", "none");
                        $("i.fab.fa-facebook-messenger.icons_chat").css("display", "block");
                        count++;
                    }
                    else if (count == 1)
                    {
                        $(".icons_chat").css("display", "none");
                        $("i.fas.fa-mobile.icons_chat").css("display", "block");
                        count++;
                    }
                    else if (count == 2)
                    {
                        $(".icons_chat").css("display", "none");
                        $("i.fa.fa-whatsapp.icons_chat").css("display", "block");
                        count++;
                        count = 0;
                    }
                }, 3000);


                $("div#fcb-main-button").click(function () {
                    if ($('#social_content').css('display') == 'none')
                    {
                        $('#social_content,.fcb-close-menu').css("display", "block");
                        $('.fcb-cross-icons').css("display", "none");
                    }
                    else
                    {
                        $('#social_content,.fcb-close-menu').css("display", "none");
                        $('.fcb-cross-icons').css("display", "block");

                    }
                });
            });
